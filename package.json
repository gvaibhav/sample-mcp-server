{
  "name": "simple-mcp-server",
  "version": "1.0.0",
  "description": "A simple MCP server with read/write tools, resources, notifications, and prompts",
  "main": "build/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node build/index.js",
    "start:http": "npm run build && node build/http-server.js",
    "dev": "tsc && node build/index.js",
    "dev:http": "tsc && node build/http-server.js",
    "docker:build": "docker build -t simple-mcp-server .",
    "docker:run": "docker run -p 8080:8080 simple-mcp-server",
    "docker:compose": "docker-compose up",
    "clean": "rmdir /s /q build 2>nul || true",
    "test": "python -m unittest discover tests -v"
  },
  "files": [
    "build"
  ],
  "keywords": [
    "mcp",
    "model-context-protocol",
    "server",
    "tools",
    "resources"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.0",
    "@types/cors": "^2.8.19",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0"
  }
}
